{
        "$schema":"http://json-schema.org/draft-04/schema#",
        "id": "urn:method/authorization#",
        "type": "object",
        "additionalProperties": true,
        "properties": {
            "author": {
                "type": "array",
                "items": {
                    "type": "object",
                        "properties": {
                            "login": {
                              "type": "string",
                                "minLength": 1,
                                "maxLength": 70
                            },
                            "password": {
                              "type": "string",
                                "minLength": 0,
                                "maxLength": 100
                            }
                        }
                  }
            }
        }
    }